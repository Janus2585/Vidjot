{{#each ideas}}
<div class="card card-body mb-2">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a class="btn btn-dark btn-block" href="/ideas/edit/{{id}}">Edit</a>
</div>
{{else}}
<p>No video ideas yet. Add your first idea!</p>
<a class="btn btn-dark btn-block" href="/ideas/add">Add an Idea</a>
{{/each}}